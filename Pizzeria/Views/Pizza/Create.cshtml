@model Pizza

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4 ms-4">Add new Pizza</h1>
<hr />
<div class="container">
    <div class="glass p-3">
		@if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger m-0">
                <ul class="m-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
			</div>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">
                
            </div>
            <div class="form-group my-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" value="https://via.placeholder.com/150" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control w-25" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="d-flex gap-3 align-content-center my-3">
                <div>
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-dark text-success" />
                </div>
            </div>
        </form>
    </div>

    
</div>


